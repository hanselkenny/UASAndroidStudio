<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".CartActivity"
android:orientation="vertical">
    <ImageView
        android:id="@+id/imOrderImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="1px"
        android:layout_height="1px"
        android:visibility="visible" />
    <TextView
    android:id="@+id/tvOrderProductName"
    android:layout_width="138dp"
    android:layout_height="54dp"
    android:layout_toRightOf="@id/imOrderImage"/>
    <TextView
    android:id="@+id/tvOrderProductDescription"
    android:layout_width="wrap_content"
    android:layout_height="56dp"
    android:layout_toRightOf="@id/imOrderImage"
    android:layout_below="@id/tvOrderProductName"/>
    <TextView
    android:id="@+id/tvOrderProductPrice"
    android:layout_width="wrap_content"
    android:layout_height="55dp"
    android:layout_toRightOf="@id/imOrderImage"
    android:layout_below="@id/tvOrderProductDescription"/>

    <EditText
        android:id="@+id/etEditOrderQuantity"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOrderProductPrice"
        android:layout_toRightOf="@id/imOrderImage"
        android:ems="10"
        android:hint="Quantity"
        android:inputType="text" />

    <TextView
        android:id="@+id/buttonIncrease"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEditOrderQuantity"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="-29dp"
        android:layout_toRightOf="@id/tvOrderProductDescription"
        android:text="Update" />
</RelativeLayout>